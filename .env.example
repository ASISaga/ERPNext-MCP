# ERPNext MCP Server Configuration
# Copy this file to .env and update with your settings

# ERPNext connection settings
ERPNEXT_URL=http://localhost:8000
ERPNEXT_USERNAME=Administrator
ERPNEXT_PASSWORD=your_password

# OR use API keys (recommended for production)
# ERPNEXT_API_KEY=your_api_key
# ERPNEXT_API_SECRET=your_api_secret

# SSL verification (set to false for self-signed certificates)
ERPNEXT_VERIFY_SSL=true

# MCP Server settings
ERPNEXT_SERVER_HOST=localhost
ERPNEXT_SERVER_PORT=8080
ERPNEXT_SERVER_NAME=ERPNext MCP Server
ERPNEXT_SERVER_VERSION=0.1.0

# Logging level
ERPNEXT_LOG_LEVEL=INFO